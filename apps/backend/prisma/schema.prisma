generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



enum Role {
  ADMIN
  CREATOR
  USER
}

model User {
  id        Int      @id @default(autoincrement())

  email     String   @unique
  name      String?
  role      Role     @default(USER)

  createdAt              DateTime            @default(now())
  updatedAt              DateTime            @updatedAt
}