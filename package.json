{
  "name": "kpsull",
  "version": "0.1.0",
  "private": true,
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "bun run prisma/seed.ts",
    "db:reset": "prisma migrate reset --force && bun run prisma/seed.ts",
    "db:local:push": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kpsull-db prisma db push",
    "db:local:studio": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kpsull-db prisma studio",
    "db:local:seed": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kpsull-db bun run prisma/seed.ts",
    "dev:local": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kpsull-db next dev --webpack",
    "build:local": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kpsull-db next build --webpack",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "seed:images:mini": "bun prisma/scripts/generate-images-gemini.ts --mini",
    "seed:images:status": "bun prisma/scripts/generate-images-gemini.ts --status",
    "seed:images:reset-mini": "bun prisma/scripts/generate-images-gemini.ts --reset-mini"
  },
  "overrides": {
    "hono": "^4.11.9",
    "lodash": "^4.17.22"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-email/components": "^1.0.7",
    "@react-pdf/renderer": "^4.3.2",
    "@sentry/nextjs": "^10.38.0",
    "@stripe/react-stripe-js": "^5.6.0",
    "@stripe/stripe-js": "^8.8.0",
    "@types/dompurify": "^3.2.0",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "cloudinary": "^2.9.0",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "isomorphic-dompurify": "^2.35.0",
    "lucide-react": "^0.563.0",
    "next": "^16.1.6",
    "next-auth": "^5.0.0-beta.30",
    "pg": "^8.17.2",
    "prisma": "^7.3.0",
    "radix-ui": "^1.4.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "recharts": "^3.7.0",
    "resend": "^6.9.2",
    "stripe": "^20.2.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@next/eslint-plugin-next": "^16.1.6",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^22.15.3",
    "@types/pg": "^8.16.0",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@vitest/coverage-v8": "^4.0.18",
    "dotenv": "^17.2.3",
    "eslint": "^9.34.0",
    "eslint-config-next": "^16.1.6",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^17.2.0",
    "prettier": "^3.6.2",
    "shadcn": "^3.8.4",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.2",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
